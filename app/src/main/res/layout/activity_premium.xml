<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PremiumActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/froozeblue"
        android:orientation="vertical">

<com.google.android.material.appbar.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:outlineAmbientShadowColor="@color/transparent"
    android:outlineSpotShadowColor="@color/transparent"
    android:background="@color/transparent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/searchappbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">
        <ImageButton
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:tint="@color/ffffffff"
            android:background="@color/transparent"
            android:src="@drawable/jz_click_back_selector"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="frooze Blue"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/ffffffff"
            android:textSize="25sp"
            android:textStyle="normal" />
    </androidx.appcompat.widget.Toolbar>
</com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >
        <ImageView
            android:layout_width="200dp"
            android:src="@drawable/logo"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/materialBlue"
            android:layout_marginTop="-4dp"
            android:text="Blue"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" />
    </LinearLayout>
    <View
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/advantages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/froozeblue"
        android:text="Benefits:"
        android:layout_marginStart="20dp"
        android:textSize="28sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/noads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/advantages"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/roboto"
        android:text="@string/noads"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000" />
    <TextView
        android:id="@+id/longervideos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/noads"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/roboto"
        android:text="@string/longervideos"
        android:pointerIcon="arrow"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000" >
    </TextView>>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/longervideos"
    android:layout_centerVertical="true"
    android:weightSum="3"
    android:orientation="horizontal">
    <com.google.android.material.card.MaterialCardView
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_width="140dp"
        android:checkable="true"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="30dp"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:checkable="true"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="30dp"/>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:checkable="true"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:cardCornerRadius="30dp"/>

</LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/getpremiummonthly"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginStart="5dp"
        android:layout_marginTop="289dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/button_bg"
        android:elevation="10dp"
        android:text="Purchase"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:cornerRadius="30dp"
        app:rippleColor="#00FFFFFF" />
        <TextView
            android:id="@+id/alreadysubscribed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:visibility="gone"
            android:text="You're already subscribed\n Thank You"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>